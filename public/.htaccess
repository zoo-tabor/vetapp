# =============================================
# VetApp Mobile - Public Directory
# VEDOS Hosting Compatible
# =============================================

# Enable rewrite engine
RewriteEngine On

# Set base directory (if app is in subdirectory)
# RewriteBase /

# Block access to parent directories
RewriteRule ^\.\./ - [F,L]

# Block access to sensitive files in public folder
<FilesMatch "\.(env|htaccess|htpasswd|ini|log|bak)$">
    Require all denied
</FilesMatch>

# Allow CORS for assets (if needed for CDN or external access)
<IfModule mod_headers.c>
    <FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot|webp)$">
        Header set Access-Control-Allow-Origin "*"
    </FilesMatch>
</IfModule>

# Enable compression for text-based assets
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript
    AddOutputFilterByType DEFLATE application/javascript application/json application/xml
    AddOutputFilterByType DEFLATE image/svg+xml
</IfModule>

# Cache control for static assets
<IfModule mod_headers.c>
    # CSS and JavaScript (1 year cache)
    <FilesMatch "\.(css|js)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Images (1 year cache)
    <FilesMatch "\.(jpg|jpeg|png|gif|ico|svg|webp)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # Fonts (1 year cache)
    <FilesMatch "\.(woff|woff2|ttf|eot)$">
        Header set Cache-Control "public, max-age=31536000, immutable"
    </FilesMatch>

    # HTML and dynamic content (no cache)
    <FilesMatch "\.(html|php)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
        Header set Pragma "no-cache"
        Header set Expires "0"
    </FilesMatch>
</IfModule>

# Serve correct MIME types
<IfModule mod_mime.c>
    AddType text/css .css
    AddType text/javascript .js
    AddType image/svg+xml .svg
    AddType application/font-woff2 .woff2
    AddType application/font-woff .woff
</IfModule>

# Main routing - redirect all non-file/directory requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]

# Security: Prevent PHP execution in uploads directory (if exists)
<IfModule mod_rewrite.c>
    RewriteRule ^uploads/.*\.php$ - [F,L]
</IfModule>